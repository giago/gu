<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:a="http://schemas.android.com/apk/res/android"
	style="@style/Fill.VerticalOrientation">
	<LinearLayout
		a:layout_width="fill_parent"
		a:layout_height="60dp"
		a:orientation="horizontal">
		<EditText
			a:id="@+id/search_term"
			a:layout_width="0dp"
			a:layout_height="fill_parent"
			a:layout_weight="7"
			a:hint="what?"
            a:singleLine="true"
            a:selectAllOnFocus="true"
			a:layout_margin="7dp"
			a:layout_marginBottom="3dp" />
		<Button
			a:id="@+id/search_submit"
			a:layout_width="0dp"
			a:layout_height="fill_parent"
			a:layout_weight="3"
			a:text="Search"
			a:layout_margin="5dp" />
	</LinearLayout>
	<ListView
		a:id="@+id/activity_search_terms_list"
		style="@style/FillHorizontaly" />
</LinearLayout>